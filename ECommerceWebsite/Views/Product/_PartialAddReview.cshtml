                <input type="text" class="form-control" name="Name" id="Name" placeholder=@Resources.Resource.Name>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

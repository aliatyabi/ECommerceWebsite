@model ECommerceWebsite.Models.Product_Reviews

@using (Ajax.BeginForm("AddReview", "Product", FormMethod.Post,
    new AjaxOptions() { UpdateTargetId = "reviews", OnSuccess = "EmptyInputs" }, new { @class = "form-horizontal", id = "AddReviewForm" }))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(p => p.ProductId)
    @Html.HiddenFor(p => p.ParentId)

    <h3>@Resources.Resource.AddAReview</h3>

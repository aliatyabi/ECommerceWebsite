@section Scripts
{
    <script src="~/Areas/Admin/assets/plugins/jstree/dist/jstree.min.js"></script>
    <script>
        $(function () {
            $('#tree1').jstree({
                'core': {
                    'multiple': false,
                    'data': {
                        'url': '/admin/product_categories/nodes',
                        'data': function (node) {
                            return { 'id': node.id };
                        }
                    },
                    'themes': {
                        'variant': 'large'
                    },
                    'plugins': ["unique"],
                }
            });
        });
    </script>
    <script src="~/Scripts/My Scripts/ShowCategories.js"></script>

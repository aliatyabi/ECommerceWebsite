@model IEnumerable<ViewModels.Product.Feature_ValuesViewModel>

@*@{
    var db = new ECommerceWebsite.Models.ECommerceWebsiteEntities();
}*@

<div class="row">
    <div class="col-md-12">
        <table class="table table-tools table-hover">
            <thead>
                <tr>
                    <th>
                        <strong>@Resources.Resource.FeatureTitle</strong>
                    </th>
                    <th>
                        <strong>@Resources.Resource.FeatureValue</strong>
                    </th>
                    <th class="text-center">
                        <strong>Actions</strong>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>&nbsp;&nbsp;&nbsp;@item.FeatureTitle</td>
                        <td>&nbsp;&nbsp;&nbsp;@item.FeatureValue</td>
                        <td class="text-center">
                            <a onclick="DeleteFeature(@item.FeatureId,'@item.FeatureValue')" class="delete btn btn-sm btn-default"><i class="fa fa-times-circle"></i> @Resources.Resource.Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@model ECommerceWebsite.Models.Product_Categories

@using (Ajax.BeginForm("Create", "Product_Categories",FormMethod.Post, 
    new AjaxOptions() { 
        UpdateTargetId = "tree1",
        OnSuccess = "closeModal"
    }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label for="CategoryTitle" class="control-label col-md-2">@Resources.Resource.CategoryTitle</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoryTitle, new { htmlAttributes = new { @class = "form-control", @placeholder = Resources.Resource.CategoryTitle } })
                @Html.ValidationMessageFor(model => model.CategoryTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        @*<div class="form-group">
            <label for="CategoryTitle" class="control-label col-md-2">@Resources.Resource.Parent</label>
            <div class="col-md-10">
                @Html.DropDownList("ParentId", null, htmlAttributes: new { @class = "form-control" })
                @Html.EditorFor(model => model.ParentId, new { htmlAttributes = new { @class = "form-control" } })

                @Html.ValidationMessageFor(model => model.ParentId, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="modal-footer text-center">
            <button type="submit" class="btn btn-default" data-dismiss="modal">
                @Resources.Resource.Cancel
            </button>
            <button type="submit" class="btn btn-success">
                @Resources.Resource.Create
            </button>
        </div>
    </div>
}

@section Scripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
}
